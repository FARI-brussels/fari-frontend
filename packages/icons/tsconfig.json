{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
  "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "bundler",
  },
  "include": ["src/**/*","src/types/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}